!!!
%html
  %head
    %title IdeaBox 
  %body
    %h1 IdeaBox
    = haml :form

    %h3 Existing Ideas
    %ul
      - ideas.each_with_index do |idea, id|
        %li
          = idea.title
          = idea.description

          %a{ :href => "/#{id}/edit"} Edit
          %form{ :action => "/#{id}", :method => 'POST'}
            %input{ :type => 'hidden', :name => '_method', :value => 'DELETE'}
            %input{ :type => 'submit', :value => 'delete'}

